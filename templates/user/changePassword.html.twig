<div class="row justify-content-center mt-5 ">
    <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
        {{ form_start(form, { 'attr': {'class': 'user-setting-change-password-form'} }) }}
        <div class="form-group">
            {{ form_label(form.oldPassword, 'Old Password') }}
            {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
            <div class="row mt-3 form-error-wraper">
                {{ form_errors(form.oldPassword) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.newPassword.first, 'New Password') }}
            {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
            <div class="row mt-3 form-error-wraper">
                {{ form_errors(form.newPassword.first) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.newPassword.second, 'Password repeat') }}
            {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
            <div class="row mt-3 form-error-wraper">
                {{ form_errors(form.newPassword.second) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Change password</button>
        {{ form_end(form) }}
    </div>
</div>