<div class="row justify-content-center mt-5 ">
    <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
        {{ form_start(form, { 'attr': {'class': 'user-setting-change-email-form'} }) }}
        <div class="form-group">
            {{ form_label(form.password, 'Password') }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            <div class="row mt-3 form-error-wraper">
                {{ form_errors(form.password) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email.first, 'New email') }}
            {{ form_widget(form.email.first, {'attr': {'class': 'form-control'}}) }}
            <div class="row mt-3 form-error-wraper">
                {{ form_errors(form.email.first) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email.second, 'Repeat new email') }}
            {{ form_widget(form.email.second, {'attr': {'class': 'form-control'}}) }}
            <div class="row mt-3 form-error-wraper">
                {{ form_errors(form.email.second) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Change Email</button>
        {{ form_end(form) }}
    </div>
</div>