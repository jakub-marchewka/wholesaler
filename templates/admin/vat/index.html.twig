{% extends './admin/base.html.twig' %}


{% block body %}
    <div class="row justify-content-end">
        <div class="col-3 text-end">
            <a class="btn btn-dark" href="{{ path("app_admin_vat_create") }}">Add vat</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Value</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% if vats is not empty %}
                    {% for vat in vats %}
                        <tr id="{{ vat.id }}">
                            <th scope="row"></th>
                            <td>{{ vat.value }}</td>
                            <td>
                                <a
                                        href="{{ path('app_admin_vat_update', {'vatId' : vat.id}) }}"
                                        class="text-black opacity-hover"
                                >
                                    <i class="fa-solid fa-file-pen"></i>
                                </a>
                            </td>
                            <td>
                                <span  class="text-black opacity-hover admin-vat-delete" vatId="{{ vat.id }}">
                                    <i class="fa-solid fa-trash-can"></i>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4">There are not any vats.</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
