{% extends './admin/base.html.twig' %}


{% block body %}
    <div class="row justify-content-end">
        <div class="col-3 text-end">
            <a class="btn btn-dark" href="{{ path("app_admin_file_index") }}">Back</a>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.fileName, 'File') }}
                {{ form_widget(form.fileName, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(form.fileName) }}
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Upload file</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
