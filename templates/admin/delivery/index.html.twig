{% extends './admin/base.html.twig' %}


{% block body %}
    <div class="row justify-content-end">
        <div class="col-3 text-end">
            <a class="btn btn-dark" href="{{ path("app_admin_delivery_create") }}">Add delivery</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% if deliveries is not empty %}
                    {% for delivery in deliveries %}
                        <tr id="{{ delivery.id }}">
                            <th scope="row"></th>
                            <td>{{ delivery.name }}</td>
                            <td>
                                <a
                                        href="{{ path('app_admin_delivery_update', {'deliveryId' : delivery.id}) }}"
                                        class="text-black opacity-hover"
                                >
                                    <i class="fa-solid fa-file-pen"></i>
                                </a>
                            </td>
                            <td>
                                <span  class="text-black opacity-hover admin-delivery-delete" deliveryId="{{ delivery.id }}">
                                    <i class="fa-solid fa-trash-can"></i>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4">There are not any deliveries.</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
