{% extends './admin/base.html.twig' %}


{% block body %}
    <div class="row justify-content-end">
        <div class="col-3 text-end">
            <a class="btn btn-dark" href="{{ path('app_admin_product_create') }}">Add product</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Active</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% if products is not empty %}
                    {% for product in products %}
                        <tr id="{{ product.id }}">
                            <th scope="row"></th>
                            <td>{{ product.name }}</td>
                            <td>{{ product.price }}</td>
                            <td>{{ product.stock }}</td>
                            <td>
                                {% if product.active == true %}
                                    <i class="fa-solid fa-check"></i>
                                {% else %}
                                    <i class="fa-solid fa-xmark"></i>
                                {% endif %}
                            </td>
                            <td>
                                <a
                                        href="{{ path('app_admin_product_update', {'productId' : product.id}) }}"
                                        class="text-black opacity-hover"
                                >
                                    <i class="fa-solid fa-file-pen"></i>
                                </a>
                            </td>
                            <td>
                                <span  class="text-black opacity-hover admin-product-delete" productId="{{ product.id }}">
                                    <i class="fa-solid fa-trash-can"></i>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5">There are not any products.</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
