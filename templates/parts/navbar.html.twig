<div class="row mb-5 mt-5">
    <div class="col-12">
        <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path("app_home") }}">Home</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            {% if is_granted("ROLE_ADMIN") %}
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path("app_admin") }}">Admin panel</a>
                                </li>
                            {% endif %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_shop_files' %}active{% endif %}" aria-current="page" href="{{ path("app_shop_files") }}">Files</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_shop_subscriptions_index' %}active{% endif %}" aria-current="page" href="{{ path("app_shop_subscriptions_index") }}">Subscriptions</a>
                            </li>
                        </ul>
                    </div>
                </div>
            {% else %}
                <div class="container-fluid justify-content-end">
                    <a class="nav-link" href="{{ path("app_login") }}">Login</a>
                    <a class="nav-link" href="{{ path("app_register") }}">Register</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            {% endif %}
        </nav>
    </div>
</div>