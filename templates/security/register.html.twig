{% extends 'base.html.twig' %}


{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
            {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(registrationForm.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.firstname, 'Firstname') }}
                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(registrationForm.firstname) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.surname, 'Surname') }}
                {{ form_widget(registrationForm.surname, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(registrationForm.surname) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.nip, 'NIP') }}
                {{ form_widget(registrationForm.nip, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(registrationForm.nip) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.phone, 'Phone') }}
                {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(registrationForm.phone) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Password') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                <div class="row mt-3 form-error-wraper">
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>
            <div class="form-check mt-3">
                {{ form_row(registrationForm.agreeTerms, {"attr":{"class":"form-check-input"}}) }}
            </div>
            <button type="submit" class="btn btn-primary mt-3">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>


{% endblock %}
